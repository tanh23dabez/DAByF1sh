@model DuAn.Models.Product

@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
     DuAn.Models.ShopDbContext db = new DuAn.Models.ShopDbContext();
}

<h1>CreateProduct</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="d-flex justify-content-center">
            <div class="col-md-10">
        <form asp-action="CreateProduct"  method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         @*   <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
              @*<label asp-for="LinkAnh" class="control-label"></label>
                <input asp-for="LinkAnh" class="form-control" />
                <span asp-validation-for="LinkAnh" class="text-danger"></span>*@
                
              <label asp-for="LinkAnh" class="control-label"></label>        
               <input  type="file" id="imageFile" name="LinkAnh" />
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
                
            </div>
            <div class="form-group">
                <label asp-for="AvailableQuantity" class="control-label"></label>
                <input asp-for="AvailableQuantity" class="form-control" />
                <span asp-validation-for="AvailableQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supplier" class="control-label"></label>
                <input asp-for="Supplier" class="form-control" />
                <span asp-validation-for="Supplier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
               @* <label asp-for="CategoryId" class="control-label"></label>
                <input asp-for="CategoryId" class="form-control" />
                <span asp-validation-for="CategoryId" class="text-danger"></span>*@
                 <label asp-for="CategoryId" class="control-label"></label>
                     <select class="form-control" name="CategoryId">
                        @foreach(var Category in db.Categorys.ToList())
                        {
                            <option value="@Category.Id">@Category.Name</option>
                        }
                </select>
            </div>
            <div class="form-group">
               @* <label asp-for="ColorId" class="control-label"></label>
                <input asp-for="ColorId" class="form-control" />
                <span asp-validation-for="ColorId" class="text-danger"></span>*@
                 <label asp-for="ColorId" class="control-label"></label>
                    <select class="form-control" name="ColorId">
                        @foreach(var Color in db.Colors.ToList())
                        {
                            <option value="@Color.Id">@Color.Name</option>
                        }
                </select>
            </div>
            <div class="form-group">
             @*   <label asp-for="SizeId" class="control-label"></label>
                <input asp-for="SizeId" class="form-control" />
                <span asp-validation-for="SizeId" class="text-danger"></span>*@
                 <label asp-for="SizeId" class="control-label"></label>
                   <select class="form-control" name="SizeId">
                        @foreach(var Size in db.Sizes.ToList())
                        {
                            <option value="@Size.Id">@Size.Kichthuoc</option>
                        }
                </select>
            </div>
            <div class="form-group">
               <label asp-for="Status" class="control-label">Trạng Thái</label>
               <div class="form-check">
                    <input class="form-check-input" type="radio" name="Status" id="Status1" value="0" checked>
                    <label class="form-check-label" for="Status1">
                        Còn Hàng
                    </label>
               </div>
               <div class="form-check">
                    <input class="form-check-input" type="radio" name="Status" id="Status2" value="1">
                    <label class="form-check-label" for="Status2">
                        Hết Hàng
                    </label>
               </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    </div>

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
