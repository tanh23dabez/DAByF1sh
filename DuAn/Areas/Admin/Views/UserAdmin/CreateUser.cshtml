@model DuAn.Models.User

@{
    ViewData["Title"] = "CreateUser";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    DuAn.Models.ShopDbContext db = new DuAn.Models.ShopDbContext();
}

<section class="content" >

    <div class="card">
        <div class="card-header">
            <h3 class="card-title"> Thông Tin Thêm Tài Khoản</h3>

        </div>
        <div class="card-body"> 
            @using (Html.BeginForm("CreateUser", "UserAdmin", FormMethod.Post,new{enctype="multipart/form-data"}))
            {
               
                  @Html.HiddenFor(p => p.Id)
                 
                    <form   method="post">
                  <div class="bs-stepper-content">
                    <!-- your steps content here -->
                   

                      <div class="form-group">
                        <label for="exampleInputEmail1">Gmail</label>
                           @Html.TextBoxFor(p => p.Gmail, new { @class = "form-control" })
                           @Html.ValidationMessageFor(Model => Model.Gmail, "", new { @class = "text-danger" })
                     
                      </div>
                      <div class="form-group">
                            <label>Tải ảnh lên</label>
                            <input type="file" id="LinkAnh" name="LinkAnh" class="form-control-file" />
                     
                      </div>
                      <div class="form-group">
                        <label for="exampleInputEmail1">Tài Khoản</label>
                           @Html.TextBoxFor(p => p.Username, new { @class = "form-control" })
                           @Html.ValidationMessageFor(Model => Model.Username, "", new { @class = "text-danger" })
                     
                      </div>
                      <div class="form-group">
                        <label for="exampleInputEmail1">Password</label>
                           @Html.TextBoxFor(p => p.Password, new { @class = "form-control" })
                           @Html.ValidationMessageFor(Model => Model.Password, "", new { @class = "text-danger" })
                     
                      </div>
                      <div class="form-group">
                        <label for="exampleInputEmail1">Chức Vụ</label>
                        <select class="form-control" name="RoleId" asp-for="RoleId">
                        @foreach(var role in db.Roles.ToList())
                        {
                            <option value="@role.Id">@role.RoleName</option>
                        }
                        </select>
                     
                      </div>
                      <div class="form-group">
                        <label for="exampleInputPassword1">Status</label>                    
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Status" id="Status1" value="0" checked>
                            <label class="form-check-label" for="Status1">
                                K Khóa 
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Status" id="Status2" value="1" >
                            <label class="form-check-label" for="Status2">
                                Khóa 
                            </label>
                        </div>
                      </div>
                      <div class="form-group">
                        <a href="/Admin/UserAdmin/ShowAllUser" class="btn btn-primary" >Quay Lại</a>
                        <button type="Submit" class="btn btn-danger" >Submit</button>
                      </div>

                      
                  
             
                  </div>

              </form>

           
            }

        </div>


        <div class="card-footer"> 


        </div>

    </div>

</section>
